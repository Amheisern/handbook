  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "arrowParens": "avoid",
  "proseWrap": "always",

  "overrides": [
    {
      "files": "lessons/*/lecture.md",
      "options": {
        "proseWrap": "preserve"
      }
    },
    {
      "files": "assignments/*.md",
      "options": {
        "proseWrap": "preserve"
      }
    }
  ]
}
